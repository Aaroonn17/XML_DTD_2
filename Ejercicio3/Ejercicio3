<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE panel [
    <!ELEMENT panel (fecha, aeropuerto, vuelo+)>
    <!ELEMENT fecha (#PCDATA)>
    <!ELEMENT aeropuerto (#PCDATA)>
    <!ELEMENT vuelo (codigo, estado, diario?, origen, destino, hora_salida, hora_llegada)>
    <!ELEMENT codigo (#PCDATA)>
    <!ELEMENT estado (#PCDATA)>
    <!ELEMENT diario EMPTY>
    <!ELEMENT origen (#PCDATA)>
    <!ELEMENT destino (#PCDATA)>
    <!ELEMENT hora_salida (#PCDATA)>
    <!ELEMENT hora_llegada (#PCDATA)>
]>
<panel>
    <fecha>20/12/2013</fecha>
    <aeropuerto>JFK</aeropuerto>
    <vuelo>
